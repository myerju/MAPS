				if f.startswith('._'):
					continue
				name = re.match('[^.]*',f).group(0)
				input_mov = os.path.join(path,f)
        start_time =
        end_time =
				output = path + "/" + name + '-emotions.mp4'
				subprocess.check_call(["ffmpeg", "-i", input_mov, "-ss", start_time, end_time "-async 1",  "-strict", "-2" output])

